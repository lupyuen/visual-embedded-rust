{
	"name": "visual-embedded-rust",
	"displayName": "Visual Embedded Rust",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.36.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.helloWorld",
		"onCommand:visualEmbeddedRust.start",
		"onCommand:visualEmbeddedRust.doRefactor",
		"onWebviewPanel:catCoding"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.helloWorld",
				"title": "Hello World"
			},
			{
				"command": "visualEmbeddedRust.start",
				"title": "Visual editor",
				"category": "Visual Embedded Rust"
			},
			{
				"command": "visualEmbeddedRust.doRefactor",
				"title": "Do some refactoring",
				"category": "Visual Embedded Rust"
			}
		],
		"menus": {
			"editor/title": [
				{
					"command": "visualEmbeddedRust.start",
					"group": "navigation",
					"when": "resourceExtname == .rs"
				}
			]
		}		
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.36.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"typescript": "^3.3.1",
		"tslint": "^5.12.1",
		"vscode-test": "^1.0.2"
	}
}
